{
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "src",
    "esModuleInterop": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "dom"
    ],
    "module": "esnext",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}